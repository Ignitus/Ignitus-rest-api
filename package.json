{
  "name": "ignitus-server",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "13.2.0"
  },
  "scripts": {
    "build": "tsc",
    "postinstall": "npm run build",
    "start": "node build/index.js",
    "start-dev": "nodemon",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "test": "jest --passWithNoTests"
  },
  "nyc": {
    "check-coverage": false,
    "all": true,
    "extension": [
      ".js"
    ],
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "**/*.spec.js",
      "build",
      "node_modules"
    ],
    "collectCoverageFrom": [
      "./config/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "~1.18.2",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.2.0",
    "mongoose": "^5.0.12",
    "morgan": "~1.9.0",
    "tslib": "1.11.1"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/eslint": "6.8.1",
    "@types/express": "4.17.1",
    "@types/jest": "26.0.3",
    "@types/jsonwebtoken": "8.5.0",
    "@types/mongoose": "5.7.21",
    "@types/morgan": "1.9.0",
    "@types/node": "13.9.1",
    "@typescript-eslint/eslint-plugin": "3.0.0",
    "@typescript-eslint/parser": "3.0.0",
    "babel-register": "^6.26.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.3",
    "jest": "26.1.0",
    "nodemon": "1.19.4",
    "nyc": "^15.0.0",
    "prettier": "2.0.5",
    "supertest": "4.0.2",
    "ts-jest": "26.1.1",
    "ts-node": "8.7.0",
    "typescript": "3.7.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "api/**/*.{js,jsx,ts}"
    ],
    "coverageReporters": [
      "json",
      "html"
    ]
  }
}
